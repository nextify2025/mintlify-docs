{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "十分钟财富笔记",
  "colors": {
    "primary": "#67787C",
    "light": "#D0D6D8",
    "dark": "#394447"
  },
  "favicon": {
    "light": "/images/10&UpwardChart.jpeg",
    "dark": "/images/ChatGPTImage2026年2月4日20_51_00.png"
